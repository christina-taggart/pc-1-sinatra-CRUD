<form id="edit-form" action="/notes/<%= session[:note_to_edit_id] %>" method="post">
  <input type="hidden" name="_method" value="put">
  Note Title: <input type="text" name="title" value="<%= Note.find(session[:note_to_edit_id]).title %>">
  Note Content: <textarea rows="4" cols="50" name="content"><%= Note.find(session[:note_to_edit_id]).content %></textarea>
  <input type="submit" value="submit">
</form>