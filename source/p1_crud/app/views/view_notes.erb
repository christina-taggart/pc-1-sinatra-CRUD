<p>You have <%= @notes.count %> notes.</p>
<ol>
<% @notes.each do |note| %>
  <div class="note">
    <li class="title">
      <%= note.title %>
    </li>
    <p class="content">
      <%= note.content %>
    </p>
    <form action="/notes/<%= note.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="DELETE">
    </form>
  </div>
<% end %>
</ol>